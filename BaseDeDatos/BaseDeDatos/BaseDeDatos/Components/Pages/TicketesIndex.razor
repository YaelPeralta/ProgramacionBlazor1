@using BaseDeDatos.Repositorio
@using BaseDeDatos.Data
@page "/tickets"
@rendermode InteractiveServer
@inject NavigationManager _navigator;
@inject IRepositorioTicketes _repositorio;

<h3>Tickets</h3>

<a class="btn btn-success" href="ticketes/nueva">Agregar Ticket</a>

@if (_ticketes == null)
{
    <div class="spinner-border" role="status">
        <span class="visually-hidden">Cargando. . .</span>
    </div>
}
else if (_ticketes.Count == 0)
{
    <h3>No existen Tickets</h3>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Sucursal</th>
                <th>Costo Total</th>
                <th>Producto</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Ticket ticket in _ticketes)
            {
                <tr>
                    <td>@ticket.Fecha</td>
                    <td>@ticket.Sucursal.Nombre</td>
                    <td>@ticket.CostoTotal</td>
                    <td>
                        <ul>
                            @foreach(Producto producto in ticket.Productos)
                        {
                            <li>@producto.Nombre</li>
                        }
                        </ul>
                    </td>
                    <td>
                        <button class="btn btn-sm" @onclick="()=>Eliminar(ticket)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                            </svg>
                        </button>
                        <button class="btn btn-sm" @onclick="()=>Modificar(ticket.TicketId)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Ticket>? _ticketes;

    protected override async Task OnInitializedAsync()
    {
        _ticketes = await _repositorio.GetAll();
    }

    private async void Eliminar(Ticket tickets)
    {
        await _repositorio.Delete(tickets.TicketId);
        _ticketes!.Remove(tickets);
        StateHasChanged();
    }

    private async void Modificar(int id)
    {
        _navigator.NavigateTo($"/ticketes/editar{id}");
    }
}
